<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="com.belearn.smileyfeedback.MainActivity"
    android:padding="3dp">

    <TextView
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:textSize="90dp"
        android:id="@+id/tvQuestion"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/please_insert_question"/>
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivGrade5"
            android:src="@drawable/emoticon5"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:onClick="createFeedback" />
        <ImageView
            android:id="@+id/ivGrade4"
            android:src="@drawable/emoticon4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:onClick="createFeedback" />
        <ImageView
            android:id="@+id/ivGrade3"
            android:src="@drawable/emoticon3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:onClick="createFeedback" />
        <ImageView
            android:id="@+id/ivGrade2"
            android:src="@drawable/emoticon2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:onClick="createFeedback" />
        <ImageView
            android:id="@+id/ivGrade1"
            android:src="@drawable/emoticon1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:onClick="createFeedback" />
    </LinearLayout>

</LinearLayout>
